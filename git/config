[user]
	name = Casey Miller
	email = cd.miller1230@gmail.com
[init]
  defaultBranch = main
[color]
	branch = auto
	diff = auto
	status = auto
	ui = auto
[core]
	editor = nvim
	excludesfile = /Users/caseymiller/.config/git/.gitignore_global
[diff]
	tool = nvimdiff
[commit]
    template = ~/.config/git/default_msg.txt
[merge]
    tool = nvim
[mergetool]
    keepBackup = false
[mergetool "nvim"]
    cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[alias]
    ll = log --pretty=format:'%C(yellow)%h%Creset %C(normal dim)::%Creset %C(blue bold)%an%Creset %C(blue dim italic)%ar%Creset %C(normal dim)::%Creset %C(green)%s%Creset'
    gl = log --pretty=format:'%C(yellow)%h%Creset %C(normal dim)::%Creset %C(blue bold)%an%Creset %C(blue dim italic)%ar%Creset %C(normal dim)::%Creset %C(green)%s%Creset' --graph
    s = status -s
    aliases = config --get-regexp alias
    amend = commit --amend --reuse-message=HEAD
    whoami = config user.email
