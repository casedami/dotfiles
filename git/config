[user]
	name = Casey Miller
	email = cd.miller1230@gmail.com
    signingkey = BD959B3E51182316

[core]
    compression = 9
    preloadindex = true
	editor = nvim
	excludesfile = /Users/caseymiller/.config/git/.gitignore_global
    pager = diff-so-fancy | less --tabs=2 -RF

[advice]
    addEmptyPathspec = false
    pushNonFastForward = false
    statusHints = false

[init]
  defaultBranch = main

[status]
    branch = true
    showStash = true
    showUntrackedFiles = all

[url "git@github.com:cdmill/"]
    insteadOf = "cdm:"

[url "git@github.com:"]
    insteadOf = "gh:"

[diff]
	tool = nvimdiff
    context = 3
    renames = copies
    interHunkContext = 10

[pager]
    branch = false
    tag = false

[diff-so-fancy]
    markEmptyLines = false

[commit]
    template = ~/.config/git/template
    gpgSign = true
    verbose = true

[push]
    autoSetupRemote = true
    default = current
    followTags = true

[pull]
    default = current
    rebase = false

[rebase]
    autoStash = true
    missingCommitsCheck = true

[merge]
    tool = nvim

[mergetool]
    keepBackup = false

[mergetool "nvim"]
    cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[log]
    abbrevCommit = true
    graphColors = blue,yellow,cyan,magenta,green,red

[branch]
    sort = -committerdate

[tag]
    sort = -taggerdate

[alias]
    ll = log --all --graph --pretty=format:'%C(yellow)%h %C(blue)%an %C(blue dim italic)%ar %C(auto)%D %C(green)%n%s%n'
    s = status -s
    aliases = config --get-regexp alias
    amend = commit --amend --reuse-message=HEAD
    whoami = config user.email

[color]
	status = auto

[color "diff"]
    meta = yellow bold
    frag = magenta
    context = white dim
    whitespace = yellow reverse
    old = red bold
    new = green bold

[color "decorate"]
    HEAD = red
    branch = magenta
    tag = yellow
    remoteBranch = cyan

[color "branch"]
    current = magenta
    local = default
    remote = cyan
    upstream = green
    plain = blue
